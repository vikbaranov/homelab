{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "applications/**/mattermost/**",
    "applications/**/gpt2giga.yaml"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/applications/.+\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/applications/.+\\.yaml$/"
    ]
  }
}
